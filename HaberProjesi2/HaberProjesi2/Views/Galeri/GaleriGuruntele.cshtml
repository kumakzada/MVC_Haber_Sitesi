@model   HaberProjesi2.Models.Haber
@{
    ViewBag.Title = "GaleriGuruntele";
    Layout = "~/Views/Shared/_Ana.cshtml";
}


<div id="container">
    <div class="wrapper">
        <div id="breadcrumb"><a href="index.html">Home</a> / <a href="gallery_3columns.html">Gallery</a> / <span class="active">Gallery page</span></div>
        <div id="page">
            <!-- content -->
            <div id="content">
                <div class="region">
                    <article class="node">
                        <h2 class="title">@Model.Baslik <span class="photos">(@Model.Resim.Count)</span></h2>
                        <div class="content block">
                            <p class="date date_main">
                                <time datetime="@Model.YayinTarih">
                                    @Model.YayinTarih
                                </time>
                                <span class="author">Posted by <a href="/Yazar/YazarProfil/@Model.ID">@Model.ID</a></span><span class="comments_count"><a href="#">@Model.Yorum.Count</a></span> <span class="email_print_pdf"><a href="#" class="email"></a></span>
                            </p>
                            <!-- AddThis Button BEGIN -->
                            <div class="addthis_toolbox addthis_default_style "> <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a> <a class="addthis_button_tweet"></a> <a class="addthis_button_google_plusone" g:plusone:size="medium"></a> <a class="addthis_counter addthis_pill_style"></a> </div>
                            <script type="text/javascript" src="../../s7.addthis.com/js/250/addthis_widget.js#pubid=xa-4f3c188f442f3bf2"></script>
                            <!-- AddThis Button END -->
                            <section class="about">
                                <div class="ad-gallery">
                                    <div class="ad-image-wrapper"></div>
                                    <div class="ad-controls"></div>
                                    <div class="ad-nav">
                                        <div class="ad-thumbs">
                                            <ul class="ad-thumb-list">
                                                @foreach (var @item in Model.Resim)
                                                {
                                                    <li><a href="@item.ResimYol"><img src="@item.KucukResimYol" alt="@item.Ozet" /></a></li>

                                                }

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </section>
                            <section>
                                <p>@Model.Icerik</p>
                                <p class="tags">
                                    Etiketler:
                                    @foreach (var @item in Model.HaberEtiket)
                                    {
                                        <a href="Etiket/HaberListele/@item.ID/@item.Ad">@item.Ad</a>
                                    }

                            </section>
                            <!-- AddThis Button BEGIN -->
                            <div class="addthis_toolbox addthis_default_style " style="margin-bottom:12px;"> <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a> <a class="addthis_button_tweet"></a> <a class="addthis_button_google_plusone" g:plusone:size="medium"></a> <a class="addthis_counter addthis_pill_style"></a> <span class="email_print_pdf"><a href="#" class="email"></a></span></div>
                            <script type="text/javascript" src="../../s7.addthis.com/js/250/addthis_widget.js#pubid=xa-4f3c188f442f3bf2"></script>
                            <!-- AddThis Button END -->
                            <p><a href="#comment_form" class="view_all"><span><span>Yorum Yapin</span></span></a><span class="previous_next"><a href="#">previous gallery</a><a href="#" class="next">next gallery</a></span></p>


                            <section id="comments">
                                <h3 class="block_title">@Model.Yorum.Count Yorum</h3>
                                <ul>
                                    @foreach (var item in Model.Yorum)
                                    {
                                        <li>
                                            <div class="details">
                                                <div class="photo"><a href="#"><img src="Content/Home/images/bg_user.png" alt="Photo" /></a></div>
                                                <div class="name">
                                                    <h4 class="title"><a href="#">@item.Ad @item.Soyad</a></h4>
                                                    <p class="date">
                                                        <time datetime="@item.Tarih">@item.Tarih</time>
                                                    </p>
                                                </div>
                                                <div class="rate"> <a href="#" class="rate_up"></a><span class="positive">+7</span><a href="#" class="rate_down"></a> </div>
                                            </div>
                                            <div class="content">
                                                <p>@item.Baslik </p>
                                            </div>
                                            <p class="reply"><a href="#" class="view_all"><span><span>reply</span></span></a></p>
                                        </li>
                                    }

                                </ul>
                            </section>
                            <div id="comment_form">
                                <h3 class="block_title">Yorum Birakin</h3>
                                <p>@Model.Icerik</p>
                                <form action="/Haber/YorumYap" method="post">
                                    <div class="form-item">
                                        <label for="edit-submitted-name">Name:</label>
                                        <input type="hidden" class="form-text" value="" size="60" id="edit-submitted-name" name="submitted[name]" maxlength="128" required />
                                        <span title="This field is required." class="form-required">(required)</span>
                                    </div>
                                    <div class="form-item">
                                        <label for="edit-submitted-email">Email:</label>
                                        <input type="email" class="form-text" value="" size="60" id="edit-submitted-email" name="submitted[email]" maxlength="128" required />
                                        <span title="This field is required." class="form-required">(required)</span>
                                    </div>
                                    <div class="form-item">
                                        <label for="edit-submitted-website">Website:</label>
                                        <input type="text" class="form-text" value="" size="60" id="edit-submitted-website" name="submitted[website]" maxlength="128" />
                                    </div>
                                    <div class="form-item">
                                        <label for="edit-submitted-message">Comment: </label>
                                        <textarea class="form-textarea" id="edit-submitted-message" name="submitted[message]" rows="5" cols="60"></textarea>
                                    </div>
                                    <div id="edit-actions">
                                        <button type="submit"><span class="view_all_medium"><span><span>Post Comment</span></span></span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
